{
  "manifest_version": 3,
  "name": "Quick Anki",
  "version": "1.0.0",
  "description": "Shortcut key to open a popup and save words to Anki.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Ctrl+Shift+K"
      },
      "description": "Open Anki Quick Adder"
    }
  },
  "host_permissions": [
    "http://127.0.0.1:8765/",
    "http://localhost:3000/",
    "https://anki-api.vercel.app/"
  ],
  "permissions": ["contextMenus", "storage", "notifications"],
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; connect-src 'self' http://127.0.0.1:8765 https://anki-api.vercel.app;"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
